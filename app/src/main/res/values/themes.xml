<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AuthGuardian" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/text_light</item>
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_green</item>
        <item name="colorOnSecondary">@color/text_light</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_dark</item>

        <item name="cardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Theme.AuthGuardian.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AuthGuardian.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AuthGuardian.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextHeadline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubHeadline" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_light</item>
        <item name="backgroundTint">@color/primary_blue</item>
    </style>
</resources>